<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete job from SA"
        android:id="@+id/JDLabel"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:textSize="32dp" />

    <TextView
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/SAIChooseSA"
        android:id="@+id/JDChooseSALabel"
        android:layout_gravity="center_horizontal" />

    <Spinner
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/JDChooseSASpinner"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please choose a job"
        android:id="@+id/JDChooseJobLabel"
        android:layout_gravity="center_horizontal" />

    <Spinner
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/JDChooseJobSpinner"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Delete Job"
        android:id="@+id/JDDeleteBtn"
        android:textAllCaps="false"
        android:textSize="25dp" />

</LinearLayout>